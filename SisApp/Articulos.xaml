                    <MenuItem Header="Administracion">
                        <MenuItem Header="Proveedores">
                            <MenuItem.Icon>
                                <Image Source="D:\scaffold\C#\SisApp\SisApp\resources\Icons\Nuevo.png"/>
                            </MenuItem.Icon>
                        </MenuItem>

                        <MenuItem Header="Compras">
                            <MenuItem.Icon>
                                <Image Source="D:\scaffold\C#\SisApp\SisApp\resources\Icons\Añadir.png"/>
                            </MenuItem.Icon>

                            <MenuItem Header="Ingresar Compra">
                                <MenuItem.Icon>
                                    <Image Source="D:\scaffold\C#\SisApp\SisApp\resources\Icons\Abrir.png"/>
                                </MenuItem.Icon>
                            </MenuItem>

                            <MenuItem Header="Consultar Compras">
