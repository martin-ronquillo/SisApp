<Window x:Class="SisApp.EgresoArticulos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SisApp"
        mc:Ignorable="d"
        Title="Egreso de Articulos" Height="676.524" Width="1063.786">
    <Grid Margin="14,10">

        <Grid.RowDefinitions>

            <RowDefinition Height="100"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>

        </Grid.RowDefinitions>

        <Grid Margin="0,0,0,10">

            <Label Content="EGRESAR PRODUCTOS" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="18" FontFamily="Verdana" FontWeight="Bold" FontStyle="Italic"/>
            <Rectangle x:Name="helper" Fill="#FFECECEC" HorizontalAlignment="Right" Height="30" Stroke="Black" VerticalAlignment="Top" Width="100" RadiusX="5" RadiusY="5" StrokeThickness="0"/>
            <TextBox x:Name="txt_nEgreso" IsEnabled="False" Text="" VerticalAlignment="Top" HorizontalContentAlignment="Right" Height="25" Width="85" FontSize="18" FontFamily="Verdana" FontStyle="Italic" Foreground="DarkCyan" HorizontalAlignment="Right"  BorderThickness="0" Background="{x:Null}" Margin="0,2,0,0"/>

            <Label Content="Fecha de Egreso:" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,0,0,25"/>
            <DatePicker Name="dp_egreso" DisplayDate="" DisplayDateStart="01/01/2015" HorizontalAlignment="Left" VerticalAlignment="Bottom" IsTodayHighlighted="True"/>

            <Label Content="Almacen:" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,247,20"/>
            <ComboBox x:Name="cbBox_almacen" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="130" Margin="0,0,170,0" SelectionChanged="cbBox_almacen_SelectionChanged"/>

            <Label Content="Tipo de Egreso:" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,60,20"/>
            <ComboBox x:Name="cbBox_tipoEgreso" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="150"/>

        </Grid>

        <Grid Grid.Row="1">

            <Separator VerticalAlignment="Top" Margin="0"/>

            <TextBox x:Name="txt_buscaProducto" HorizontalAlignment="Left" VerticalAlignment="Center" Height="25" Width="148" IsEnabled="False"/>
            <Button x:Name="btn_seleccionaProducto" HorizontalAlignment="Left" VerticalAlignment="Center" Height="24" Width="25" ToolTip="Seleccionar Productos" Margin="122,8,0,8" Click="btn_seleccionaProducto_Click">
                <Image Source="Subir.png"/>
            </Button>

        </Grid>

        <DataGrid x:Name="dg_datos" Grid.Row="2" HorizontalContentAlignment="Center" AutoGenerateColumns="False" CanUserAddRows="False" CellEditEnding="dg_datos_CellEditEnding">
            <DataGrid.Columns>

                <DataGridTextColumn Header="CODIGO" IsReadOnly="True" Width="95" Binding="{Binding BarCode}"/>
                <DataGridTextColumn Header="PRODUCTO" IsReadOnly="True" Width="*" Binding="{Binding ProductName}"/>
                <DataGridTextColumn Header="GANANCIA %" IsReadOnly="True" Width="95" Binding="{Binding SalePricePercent}"/>
                <DataGridTextColumn Header="P.V.P" IsReadOnly="True" Width="95" Binding="{Binding SalePrice}"/>
                <DataGridTextColumn Header="CANTIDAD" IsReadOnly="False" Width="95" Binding="{Binding Amount}"/>
                <DataGridTextColumn Header="V. COMPRA $" IsReadOnly="True" Width="90" Binding="{Binding PurchasePrice}"/>
                <DataGridTextColumn Header="V. TOTAL $" IsReadOnly="True" Width="85" Binding="{Binding TotalPrice}"/>

            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Row="3">

            <Button x:Name="btn_Guardar" Content="GUARDAR" HorizontalAlignment="Right" VerticalAlignment="Center" Height="30" Width="75" Click="btn_Guardar_Click"/>
            <Button x:Name="btn_limpiar" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,20,0,0" Height="40" Width="40" BorderThickness="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="{x:Null}" Click="btn_limpiar_Click" ToolTip="Limpiar formulario">
                <Image Source="Limpiar.png" OpacityMask="#FFDDDDDD"/>
            </Button>

        </Grid>

    </Grid>
</Window>
